{
  "name": "esy-libvterm",
  "version": "1.0.0",
  "description": "Esy-enabled libvterm build",
  "license": "MIT",
  "esy": {
    "build": [
        ["bash", "-c", "#{os == 'windows' ? 'PREFIX=$cur__install CC=x86_64-w64-mingw32-gcc make install' : 'echo'}"],
        ["bash", "-c", "#{os == 'darwin' ? 'PREFIX=$cur__install make' : 'echo'}"],
        ["bash", "-c", "#{os == 'macOS' ? 'PREFIX=$cur__install make' : 'echo'}"],
        ["bash", "-c", "#{os == 'linux' ? 'PREFIX=$cur__install make' : 'echo'}"]
    ],
    "install": [
        "PREFIX=$cur__install make"
    ],
    "buildsInSource":true,
    "exportedEnv": {
        "LIBVTERM_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "LIBVTERM_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        },
        "LD_LIBRARY_PATH": {
            "val": "#{self.lib : $LD_LIBRARY_PATH}",
            "scope": "global"
        }
    }
  },
  "dependencies": { 
    "esy-libtools": "github:esy-packages/esy-libtools#0fe7687"
  }
}
